<odoo>
    <template id="report_payment_order">

        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang or o.company_id.partner_id.lang" />
                <t t-call="l10n_py_account.custom_report_payment_order_document" t-lang="lang" />
            </t>
        </t>
    </template>

    <template id="custom_report_payment_order_document">
        <t t-call="web.external_layout">
            <t t-set="values" t-value="o._get_payment_receipt_report_values()" />
            <div class="page">
                <div name="date" class="row">
                    <div class="col-12" t-if="o.date">
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <th class="text-center">
                                        <h3>
                                            <strong>Orden de Pago : <span t-field="o.name">INV0001</span></strong>
                                        </h3>
                                    </th>
                                </tr>

                            </tbody>
                        </table>
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <th colspan="3">
                                        <span>A LA ORDEN DE : </span>
                                        <span t-field="o.partner_id" />
                                    </th>
                                    <th>
                                        <span>FECHA: </span>
                                        <span t-field="o.date" />
                                    </th>
                                </tr>
                            </tbody>
                        </table>
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <td>Numero</td>
                                    <td colspan="3">Cheque/Transferencia</td>
                                    <td class="text-end">Importe</td>
                                </tr>
                                <tr>
                                    <td>
                                        <span t-field="o.name">INV0001</span>
                                    </td>
                                    <td colspan="3">
                                        <t
                                            t-out="o.journal_id.name if o.journal_id.type != 'cash' else 'Efectivo'" />
                                    </td>
                                    <td class="text-end">
                                        <span t-field="o.amount"
                                            t-options="{'widget': 'monetary', 'display_currency': o.currency_id}">
                                            100</span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="oe_structure"></div>
                <div class="row"><div class="col-10"><![CDATA[&nbsp;]]></div></div>
                <div class="row">
                    <div class="col-10"><![CDATA[&nbsp;]]></div>
                </div>

                <div class="row">
                    <div class="col-10">
                        <span>En concepto de : </span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-10">
                        <span>Son : </span>
                        <span t-out="o.currency_id.amount_to_text(o.amount)" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-10"><![CDATA[&nbsp;]]></div>
                </div>

                <div class="oe_structure"></div>

                <div class="row">
                    <div class="col-1"></div>
                    <div class="col-10 text-center">
                        <h4>DOCUMENTOS A PAGAR</h4>
                    </div>
                </div>
                <t t-set="invoices" t-value="o.reconciled_invoice_ids or o.reconciled_bill_ids" />
                <table class="table table-borderless">
                    <tbody>
                        <tr>
                            <td>Fecha</td>
                            <td colspan="3">Nro de comprobante</td>
                            <td class="text-end" colspan="2">Importe</td>
                        </tr>
                        <t t-foreach="invoices" t-as="inv">
                            <t t-if="inv.move_type != 'entry'">
                                <tr>
                                    <td>
                                        <span t-field="inv.invoice_date">2023-01-01</span>
                                    </td>
                                    <td colspan="3">
                                        <span t-field="inv.name">INV001</span>
                                    </td>
                                    <td class="text-end" colspan="2">
                                        <span t-field="inv.amount_total">100.00 USD</span>
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

                <div class="row"><div class="col-10"><![CDATA[&nbsp;]]></div></div>
                <div class="row"><div class="col-10"><![CDATA[&nbsp;]]></div></div>
                <div class="row"><div class="col-10"><![CDATA[&nbsp;]]></div></div>
                <div class="row"><div class="col-10"><![CDATA[&nbsp;]]></div></div>

                <table class="table table-borderless">
                    <tbody>
                        <tr>
                            <td class="col-3" style="height:100px" ><![CDATA[&nbsp;]]></td>
                            <td class="col-6"><![CDATA[&nbsp;]]></td>
                            <td><![CDATA[&nbsp;]]></td>
                        </tr>
                        <tr>
                            <td><span>Recibo conforme</span></td>
                            <td><span>Aclaracion</span></td>
                            <td><span>Fecha</span></td>
                        </tr>
                    </tbody>
                </table>

                <table class="table table-borderless">
                    <tbody>
                        <tr>
                            <td class="col-2" style="height:100px"><![CDATA[&nbsp;]]></td>
                            <td class="col-2"><![CDATA[&nbsp;]]></td>
                            <td class="col-2"><![CDATA[&nbsp;]]></td>
                            <td class="col-2"><![CDATA[&nbsp;]]></td>
                        </tr>
                        <tr>
                            <td>Auxiliar administrativo</td>
                            <td>Encargada asministrativa</td>
                            <td>Autorizacion 1</td>
                            <td>Autorizacion 2</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </t>
    </template>

</odoo>