<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="custom_report_payment_detail">
            <div class="row">
                <div class="col-6 text-end">
                    <strong><t t-out="org_dup"/></strong>
                </div>
            </div>
            <div class="mb-4 mt-3">
                <div class="row">
                    <div class="col-6" t-if="o.date">
                        Fecha Pago: <span t-field="o.date"/>
                    </div>
                    <div class="text-right" >
                        <h5><strong>Recibo de Dinero N°: <span t-field="o.name"/></strong></h5>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6" t-if="o.partner_type">
                        <t t-if="o.partner_type == 'customer'">Cliente:</t>
                        <t t-if="o.partner_type == 'supplier'">Proveedor:</t>
                        <span t-field="o.partner_id" data-oe-demo="Marc Demo"/>
                    </div>
                    <div class="col-6" ></div>
                </div>
                <div class="row">
                    <div class="col-6" >RUC: <span t-field="o.partner_id.vat"/></div>
                    <div class="col-6"></div>
                </div>
                <!-- -->
                <t t-set="invoices" t-value="o.reconciled_invoice_ids or o.reconciled_bill_ids"/>
                <t t-foreach="invoices" t-as="inv">
                    <t t-if="any(inv.currency_id != par[2].currency_id for par in inv._get_reconciled_invoices_partials()[0])" t-set="otherCurrency" t-value="True"/>
                    <t t-if="inv.move_type != 'entry'">
                        <t t-foreach="inv._get_reconciled_invoices_partials()[0]" t-as="par">
                            <t t-set="amount" t-value="par[1]"/>
                            <t t-set="payment" t-value="par[2].move_id"/>
                        </t>
                    </t>
                </t>
                <div class="row">
                    <div class="col-6" t-if="o.amount and o.amount != 0">
                        <span>Importe de Pago: </span>
                        <strong>
                            <span t-out="o.amount if o.amount else amount" 
                                  t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                        </strong>
                    </div>
                    <div class="col-6" >Fecha de Deposito:</div>
                </div>
                <div class="row">
                    <div class="col-10">
                        <strong>Son <span t-out="o.currency_id.amount_to_text(o.amount if o.amount else amount)"/></strong>
                    </div>
                </div>
                <table class="table table-sm">
                    <tbody>
                        <t t-foreach="invoices" t-as="inv">
                            <t t-if="inv.move_type != 'entry'">
                                <tr>
                                    <td width="30%" >Pago Correspondiente a Factura N° </td>
                                    <td width="20%" class="text-right"><strong><span t-field="inv.name"/></strong></td>
                                </tr>
                            </t>
                            <t t-if="inv.amount_residual != 0">
                                <tr>
                                    <td>Saldo adeudado: </td>
                                    <td class="text-right"><strong><span t-field="inv.amount_residual"/></strong></td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>
                <div class="row">
                    <div class="col-6">
                        <span>Pago en </span>
                        <t t-out="o.journal_id.name if o.journal_id.type != 'cash' else 'Efectivo'"/>
                    </div>
                    <div class="col-6"></div>
                </div>
                <div class="row"><div class="col-10"><![CDATA[&nbsp;]]></div></div>
                <div class="row"><div class="col-10"><![CDATA[&nbsp;]]></div></div>
                <div class="row"><div class="col-10"><![CDATA[&nbsp;]]></div></div>
                <div class="row"><div class="col-10"><![CDATA[&nbsp;]]></div></div>
                <div class="row">
                    <div class="col-6"></div>
                    <div class="col-6">
                        <div class="text-right">----------------------------------</div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6"></div>
                    <div class="col-6">
                        <div class="text-right">Firma: <span  t-field="usuario.name">Usuario</span></div>
                    </div>
                </div>
            </div>

    </template>
    
    <template id="custom_report_payment_receipt_document">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context(lang=lang)"/>
            <t t-call="l10n_py_account.custom_report_payment_detail">
                <t t-set="o" t-value="o.with_context(lang=lang)"/>
                <t t-set="values" t-value="o._get_payment_receipt_report_values()"/>
                <t t-set="company" t-value="env.company"/>
                <t t-set="usuario" t-value="env.user"/>
                <t t-set="org_dup">ORIGINAL</t>
            </t>
            <div class="row"><div class="col-10"><![CDATA[&nbsp;]]></div></div>
            <div class="row"><div class="col-10"><![CDATA[&nbsp;]]></div></div>
            <div class="row">
                <div class="col-1"></div>
                <div class="col-5">
                    <span>---------------------------------------------------------------------------------</span>
                </div>
                <div class="col-1"></div>
                <div class="col-5">
                    <span>---------------------------------------------------------------------------------</span>
                </div>
            </div>
            <div class="row"><div class="col-10"><![CDATA[&nbsp;]]></div></div>
            <div class="row"><div class="col-10"><![CDATA[&nbsp;]]></div></div>
            <div class="row"><div class="col-10"><![CDATA[&nbsp;]]></div></div>
            <t t-call="l10n_py_account.custom_report_payment_detail">
                <t t-set="o" t-value="o.with_context(lang=lang)"/>
                <t t-set="values" t-value="o._get_payment_receipt_report_values()"/>
                <t t-set="company" t-value="env.company"/>
                <t t-set="usuario" t-value="env.user"/>
                <t t-set="org_dup">DUPLICADO</t>
            </t>
        </t>
    </template>

    <template id="report_payment_receipt" inherit_id="account.report_payment_receipt">

        <xpath expr="//t[@t-call='web.html_container']" position="replace">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.partner_id.lang or o.company_id.partner_id.lang"/>
                    <t t-if="o.company_id.l10n_py_custom_report_payment">
                        <t t-call="l10n_py_account.custom_report_payment_receipt_document" t-lang="lang"/>
                    </t>
                    <t t-else="">
                        <t t-call="account.report_payment_receipt_document" t-lang="lang"/>
                    </t>
                </t>
            </t>
        </xpath>

    </template>
</odoo>
