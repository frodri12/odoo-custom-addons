<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="base_view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']/.." position="after">
                <field name="l10n_py_dnit_responsibility_type_id"
                    invisible="'PY' not in fiscal_country_codes"
                    options="{'no_open': True, 'no_create': True}"
                    readonly="parent_id" />
            </xpath>

            <!-- ADDRESS -->
            <xpath expr="//sheet/group/group/div[hasclass('o_address_format')]" position="replace"
                mode="inner">

                <!--<div
                class="o_address_format">-->
                <div style="width:100%;">
                    <field name="street" placeholder="Street..." class="o_address_street"
                        style="width:70%;display:inline-block;" />
                    <field name="l10n_py_house" placeholder="House" class="o_address_zip"
                        style="width:25%;float:right;display:inline-block;text-align:right;" />
                </div>
                <field name="street2" placeholder="Street 2..." class="o_address_street" />
                <div invisible="country_code == 'PY'">
                    <field name="city" placeholder="City" class="o_address_city" />
                    <field name="state_id" class="o_address_state" placeholder="State"
                        options="{&quot;no_open&quot;: True}" />
                    <field name="zip" placeholder="ZIP" class="o_address_zip" />
                </div>
                <div invisible="country_code != 'PY'">
                    <field name="state_id" class="o_address_city" placeholder="Department" />
                    <field name="l10n_py_district_id" placeholder="District"
                        class="o_address_state" options="{&quot;no_open&quot;: True}" />
                    <field name="l10n_py_city_id" placeholder="City" class="o_address_zip" />
                </div>
                <field name="country_id" placeholder="Country" class="o_address_country"
                    options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" />
                <!--</div>-->

            </xpath>

            <xpath expr="//page[4]" position="after">
                <page string="AutoFactura"
                    invisible="country_code != 'PY' or l10n_py_dnit_responsibility_type_id != 4 or supplier_rank == 0">
                    <group>
                        <group string="Comprobante de No Contribuyente">
                            <field name="l10n_py_dnit_self_number" />
                            <field name="l10n_py_dnit_self_control" />
                            <field name="l10n_py_dnit_self_end_date" />
                        </group>
                    </group>
                </page>
                <page string="DNIT"
                    invisible="country_code != 'PY' or supplier_rank == 0">
                    <group>
                        <group string="Datos por defecto del timbrado">
                            <field name="l10n_py_dnit_auth_code" />
                            <field name="l10n_py_dnit_auth_startdate" />
                            <field name="l10n_py_dnit_auth_enddate" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>


