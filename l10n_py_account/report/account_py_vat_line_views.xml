<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_account_py_vat_line_search" model="ir.ui.view">
        <field name="name">account.py.vat.line.search</field>
        <field name="model">account.py.vat.line</field>
        <field name="arch" type="xml">
            <search>
                <field name="move_id"/>
                <field name="partner_id"/>
                <field name="journal_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <separator/>
                <filter name="posted" string="Posted" domain="[('state','=','posted')]" help="Posted Journal Items"/>
                <separator/>
                <filter string="Sales VAT" name="sales_vat" domain="[('move_type','in', ['out_invoice','out_refund'])]"/>
                <filter string="Purchase VAT" name="purchase_vat" domain="[('move_type','in', ['in_invoice','in_refund'])]"/>
                <separator/>
                <group expand="0" string="Group By...">
                    <filter name="groupby_date" string="Date" context="{'group_by':'date'}"/>
                    <filter name="groupby_company_id" string="Company" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                </group>
                <filter name="filter_date_last_month" invisible="1" string="Date: Last month" 
                        domain="[('date', '&lt;', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')),('date', '&gt;=', (context_today() + relativedelta(months=-1,day=1)).strftime('%Y-%m-%d'))]"/>
            </search>
        </field>
    </record>

    <record id="view_account_py_vat_line_tree" model="ir.ui.view">
        <field name="name">account.py.vat.line.list</field>
        <field name="model">account.py.vat.line</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="l10n_latam_identification_type_id"/>
                <field name="partner_vat"/>
                <field name="partner_name"/>
                <field name="date"/>
                <field name="move_id"/>
                <field name="partner_id"/>
                <field name="move_name"/>
            </list>
        </field>
    </record>

    <record id="action_account_py_vat_line" model="ir.actions.act_window">
        <field name="name">Resumen de IVA</field>
        <field name="res_model">account.py.vat.line</field>
        <field name="view_mode">list</field>
        <field name="context">{'search_default_posted':1, 'search_default_filter_date_last_month': 1}</field>
    </record>

    <menuitem id="menu_current_account" parent="menu_dnit_report" sequence="10" action="action_account_py_vat_line"/>
</odoo>